section#welcome
	width: 100%
	height: 550px
	background-image: url('/assets/images/bg/ui-gray.jpg')
	background-repeat: no-repeat
	background-size: cover
	background-position: 0 -12rem
	background-attachment: fixed
	margin-top: $nav-bar-height
	position: relative
	
	#welcome-inner
		width: 100%
		position: absolute
		top: 50%
		margin-top: -($welcome-inner-height/2)
		text-align: center
		
	h1
		color: #fff
		text-shadow: 3px 1px 2px rgba(0, 0, 0, .75)
		letter-spacing: 3px
		font-size: 2.5em
		font-weight: 400
		margin-bottom: 3rem
		
	button
		$shadow-btn()
		text-transform: uppercase
		font-weight: 700