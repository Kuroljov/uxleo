section#persona
	clearfix()
	margin-bottom: 3rem
	header
		height: 350px
		background-image: url('/assets/images/bg/design-tools.jpg')
		text-align: center

		h3, blockquote, p
			margin: 0
			color: #fff

		h3
			font-family: Raleway, sans-serif
			font-size: 2.5em
			font-weight: 300
			letter-spacing: 1px
			text-transform: uppercase
			border-bottom: 2px solid #fff
			padding-bottom: .9rem
			margin-bottom: 2.5rem
			display: inline-block
			margin-top: 5.5rem
			
		blockquote, p
			font-family: Lato, sans-serif
			font-size: 1.6em
			font-weight: 300
			
		blockquote
			&:before
				content: '“'
			&:after
				content '”'
				
	.container
		width: 1160px
		margin: 0 auto
		
		.title
			text-align: center
			h3
				font-family: Raleway, sans-serif
				font-size: 2.1em
				font-weight: 300
				color: #333
				letter-spacing: 1px
				text-transform: uppercase
				border-bottom: 2px solid #ccc
				display: inline-block
				padding-bottom: .9rem
				margin-top: 3.5rem
				margin-bottom: 3rem
				
		.left
			float: left
			width: 33%
			background: #232323
			height: 330px
			text-align: center
			
			.photo
				background-image: url('/assets/images/team/leonid_drozdov_ux-ui-designer.jpg')
				width: 150px
				height: 150px
				border-radius: 50%
				margin: 3rem auto 2rem
				box-shadow: 0 1px .5rem rgba(#000, .33)
				
			p
				color: #fff
				font-family: Raleway, sans-serif

			p.name
				font-size: 1.2em
				margin-bottom: 0

			p.small
				font-size: .75em

		.right
			float: right
			width: 67%
			height: 330px
			background #f5f5f5
			padding: 0 3rem
			box-sizing: border-box
			
			h3
				font-family: Raleway, sans-serif
				font-size: 2em
				font-weight: 300
				
			p
				line-height: 1.5
				color: #555
				margin-bottom: 1.5rem
				
			a
				font-family: Raleway, sans-serif
				font-weight: 700
				text-transform: uppercase
				text-decoration: none
				color: $red
				transition: all 200ms ease
				&:hover
					color: $blacky