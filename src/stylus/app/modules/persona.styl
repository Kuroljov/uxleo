section#persona
	header
		height: 350px
		background-image: url('/assets/images/bg/design-tools.jpg')
		text-align: center

		h3, blockquote, p
			margin: 0
			color: #fff

		h3
			font-family: Raleway, sans-serif
			font-size: 2.5em
			font-weight: 300
			letter-spacing: 1px
			text-transform: uppercase
			border-bottom: 2px solid #fff
			padding-bottom: .9rem
			margin-bottom: 2.5rem
			display: inline-block
			margin-top: 5.5rem
			
		blockquote, p
			font-family: Lato, sans-serif
			font-size: 1.6em
			font-weight: 300
			
		blockquote
			&:before
				content: '“'
			&:after
				content '”'
				
	.container
		width: 1160px
		margin: 0 auto
		.title
			text-align: center
			h3
				font-family: Raleway, sans-serif
				font-size: 2.1em
				font-weight: 300
				color: #333
				letter-spacing: 1px
				text-transform: uppercase
				border-bottom: 2px solid #ccc
				display: inline-block
				padding-bottom: .9rem
				margin-top: 4rem