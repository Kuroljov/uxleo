&
	position: fixed
	width: 100%
	height: $nav-bar-height
	background: rgba(#222, .9)
	border-bottom: 1px solid $blacky
	z-index: 2

	.nav-bar-inner
		width: $nav-bar-width
		margin: auto
		height: $nav-bar-height
		padding-left: 1rem
		
	#logo
		float: left
		background: url('/assets/icons/logo.svg') no-repeat
		background-size: contain
		width: 4rem
		height: 1.5rem
		box-sizing: border-box
		margin-top: .9rem
		
	#nav
		height: 100%
		float: left
		
		a
			height: $nav-bar-height
			line-height: ($nav-bar-height + 3)
			padding: 0 1rem
			color: #999
			text-decoration: none
			display: block
			float: left
			transition: all 200ms ease-out
			&:hover
				color: #eee
				text-shadow: 0 0 .33rem rgba(#eee, .33)
			&.active
			&:active
				background-color: rgba($blacky, .9)
				color: #eee