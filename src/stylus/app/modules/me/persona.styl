section#persona
	clearfix()
	margin-bottom: 3rem
				
	.title
		margin: 3rem 0

	.container
		width: 75%
		margin: auto
				
		.left
			float: left
			width: 33%
			background: #2b2b2b
			height: 330px
			text-align: center
			box-sizing: border-box
			
			.photo
				background-image: url('/assets/images/team/leonid_drozdov_ux-ui-designer.jpg')
				width: 150px
				height: 150px
				border-radius: 50%
				margin: 3rem auto 2rem
				box-shadow: 0 1px .5rem rgba(#000, .33)
				
			p
				color: #fff
				font-family: Raleway, sans-serif

			p.name
				font-size: 1.2em
				margin-bottom: 0

			p.small
				font-size: .75em

		.right
			float: right
			width: 67%
			height: 330px
			background #f5f5f5
			padding: 0 3rem
			box-sizing: border-box
			
			h3
				font-family: Raleway, sans-serif
				font-size: 2em
				font-weight: 300
				
			p
				line-height: 1.5
				color: #555
				margin-bottom: 1.5rem
				
			a
				font-family: Raleway, sans-serif
				font-weight: 700
				text-transform: uppercase
				text-decoration: none
				color: $red
				transition: all 200ms ease
				&:hover
					color: $blacky
					
	@media screen and (max-width: 1350px)
		.container
			width: 80%
			
	@media screen and (max-width: 1270px)
		.container
			width: 85%
			
	@media screen and (max-width: 1200px)
		.container
			width: 90%
			
	@media screen and (max-width: 1130px)
		.container
			width: 90%
				
			.right
				padding: 0 2rem
				
	@media screen and (max-width: 1075px)
		.container
			.left, .right
				width: 100%
				float: none
				height: auto
				padding: 3rem 4rem
				text-align: center
				
			.right
				h3
					margin: 0
					margin-bottom: 2rem
					
			.left
				.photo
					margin: 0 auto
					