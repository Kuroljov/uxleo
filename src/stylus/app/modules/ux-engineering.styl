section#ux-engineering
	padding: 3.5rem 0 2.5rem
	text-align: center

	h3
		font-family: Raleway, sans-serif
		font-size: 2.1em
		font-weight: 300
		color: #333
		letter-spacing: 1px
		text-transform: uppercase
		border-bottom: 2px solid #ccc
		display: inline-block
		padding-bottom: .9rem
		
	.container
		width: 1100px
		margin: 0 auto
		clearfix()

		.one-half
			width: 49%
			float: left
			&:nth-child(1)
				margin-right: 2%
				
			p
				color: #555
				text-align: left
				line-height: 1.75