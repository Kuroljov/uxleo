.container
	width: 1100px
	margin: 3rem auto
	clearfix()

	.item
		width: 32%
		float: left
		margin-right: 2%
		height: auto
		position: relative
		overflow: hidden
		margin-bottom: 1rem

		&:nth-last-child(1)
		&:nth-last-child(2)
		&:nth-last-child(3)
			margin-bottom: 0
		&:nth-child(3n)
			margin-right: 0

	img
		width: 100%
		height: auto
		
	img, .overlay
		transition: all 800ms cubic-bezier(0.11, 0.6, 0, 1.04)

	.overlay
		opacity: 0
		visibility: hidden
		background rgba($red, .75)
		position: absolute
		top: 0
		bottom: 0
		left: 0
		right: 0
		text-align: center
		z-index: 1
		
		&.show-overlay
			visibility: visible
			opacity: 1

			& ~ img
				transform: scale(1.1)
		
		button, p
			margin: 0
			font-family: Lato, sans-serif
			font-weight: 700

		p
			margin-top: 17.5%
			font-size: 1.3em
			color: #fff

		button // 'take a look' button
			$shadow-btn()
			margin-top: 3.5rem
			font-size: 1.1em
			background: rgba(#fff, .8)
			transition: background 200ms ease
			&:hover
				color: #333
				box-shadow: 0 .25rem 0 #333
				background: rgba(#fff, 1)
			&:focus
				box-shadow: none
				
	@media screen and (max-width: 1150px)
		width: 960px

		.item
			width: 48%
			float: left
			margin-right: 2%
			margin-bottom: 1rem

			&:nth-last-child(1)
			&:nth-last-child(2)
			&:nth-last-child(3)
				margin-bottom: 1rem
			&:nth-child(3n)
				margin-right: 2%
			&:nth-child(2n)
				margin-bottom: 1rem
			&:nth-last-child(1)
			&:nth-last-child(2)
				margin-bottom: 0
				
		.overlay
			p
				margin-top: 20%
				
	@media screen and (max-width: 1000px)
		width: 90%
		margin: 5% auto

	@media screen and (max-width: 860px)
		width: 95%
		margin: 5% auto

		.overlay
			p
				margin-top: 17.5%

	@media screen and (max-width: 700px)
		width: 90%

		.item
			width: 100%
			float: left
			margin-right: 0
			margin-bottom: 1rem

			&:nth-last-child(1)
			&:nth-last-child(2)
			&:nth-last-child(3)
				margin-bottom: 0
			&:nth-child(3n)
				margin-right: 0
			&:nth-child(2n)
				margin-bottom: 0
			&:nth-last-child(1)
			&:nth-last-child(2)
				margin-bottom: 0
			&:nth-child(1n)
				margin-bottom: 1rem
			&:nth-last-child(1)
				margin-bottom: 0
				
		.overlay
			p
				margin-top: 25%

	@media screen and (max-width: 600px)
		width: 95%
		margin: 1rem auto

	@media screen and (max-width: 550px)
		.overlay
			p
				margin-top: 20%

	@media screen and (max-width: 440px)
		.overlay
			p
				margin-top: 17.5%

	@media screen and (max-width: 380px)
		.overlay
			p
				margin-top: 15%