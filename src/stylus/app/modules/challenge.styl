section#challenge
	margin-bottom: 3rem
	.title
		text-align: center
		margin-top: 1rem
		h3
			font-family: Raleway, sans-serif
			font-size: 2.1em
			font-weight: 300
			color: #333
			letter-spacing: 1px
			text-transform: uppercase
			border-bottom: 2px solid #ccc
			display: inline-block
			padding-bottom: .9rem
			
	.container
		width: 1160px
		margin: 0 auto
		clearfix()
		
	.group
		width: 32.666666%
		float: left
		box-sizing: border-box
		margin-right: 1%
		&:nth-last-child(1)
			margin-right: 0

		h3.group-title
			font-family: Raleway, sans-serif
			font-size: 1.6em
			font-weight: 300
			
		ul
			list-style: none
			padding: 0
			li, a
				font-weight: 400
				color: #333
				font-size: 1.1em
				line-height: 1.5